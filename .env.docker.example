# ============================================
# EduMate Docker Environment Variables
# Copy this file to .env and fill in your values
# ============================================

# ========== General Settings ==========
NODE_ENV=development
FLASK_ENV=development

# ========== PostgreSQL Configuration ==========
POSTGRES_USER=edumate_user
POSTGRES_PASSWORD=edumate_password
POSTGRES_DB=edumate
POSTGRES_PORT=5432

# ========== MongoDB Configuration ==========
MONGO_USER=edumate_user
MONGO_PASSWORD=edumate_password
MONGO_DB=edumate
MONGO_PORT=27017

# ========== Qdrant Configuration ==========
QDRANT_API_KEY=qdrant_api_key
QDRANT_PORT=6333

# ========== Ganache/Blockchain Configuration ==========
GANACHE_PORT=8545
GANACHE_MNEMONIC=test test test test test test test test test test test junk
BLOCKCHAIN_PRIVATE_KEY=0xac0974bec39a17e36ba4a6b4d238ff944bacb476caded64602d3f5ee1e8c1c67

# ========== Auth Service Configuration ==========
AUTH_SERVICE_PORT=3001
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRE=7d

# ========== Blockchain Service Configuration ==========
BLOCKCHAIN_SERVICE_PORT=3003

# ========== Message Service Configuration ==========
MESSAGE_SERVICE_PORT=3002

# ========== CV Parser Service Configuration ==========
CV_PARSER_PORT=5001

# ========== Machine Learning / API Keys ==========
MISTRAL_API_KEY=your-mistral-api-key
OPENROUTER_API_KEY=your-openrouter-api-key

# ========== LinkedIn OAuth (for CV Parser) ==========
LINKEDIN_CLIENT_ID=your-linkedin-client-id
LINKEDIN_CLIENT_SECRET=your-linkedin-client-secret

# ========== Web App Configuration ==========
WEB_APP_PORT=5173

# ========== Service URLs (Docker internal) ==========
# These should remain as is for Docker networking
AUTH_SERVICE_URL=http://auth-service:3001
BLOCKCHAIN_SERVICE_URL=http://blockchain-service:3003
MESSAGE_SERVICE_URL=http://message-service:3002
CV_PARSER_SERVICE_URL=http://cv-parser-service:5001
QDRANT_URL=http://qdrant:6333
WEB3_PROVIDER_URL=http://ganache:8545

# ========== Development Settings ==========
DEBUG=false
LOG_LEVEL=info
